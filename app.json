{
  "expo": {
    "name": "photo",
    "slug": "photo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/etc/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/etc/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.jerome1011.photo"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/etc/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.jerome1011.photo",
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_MEDIA_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/etc/favicon.png"
    },
    "plugins": [
      [
        "expo-media-library",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to access your photos.",
          "savePhotosPermission": "Allow $(PRODUCT_NAME) to save photos.",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ],
    "extra": {
      "eas": {}
    }
  }
}
